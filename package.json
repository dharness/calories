{
  "name": "calorie-optimizer",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun server/cli.ts",
    "api": "bun --hot server/server.ts",
    "dev": "bunx --bun concurrently -k \"bun --hot server/server.ts\" \"cd client && bunx --bun vite\"",
    "build": "cd client && bunx --bun vite build",
    "preview": "cd client && bunx --bun vite preview"
  },
  "dependencies": {
    "@trpc/client": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "dotenv": "^16.4.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.0",
    "vite": "^7.1.3"
  }
}
